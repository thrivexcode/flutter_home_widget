<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg_rounded"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Notes"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- Note list container dengan divider -->
    <LinearLayout
        android:id="@+id/notes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <!-- Note item 1 -->
        <FrameLayout
            android:id="@+id/note_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/note_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title 1"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/note_content_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content 1"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>

        <!-- Note item 2 -->
        <FrameLayout
            android:id="@+id/note_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/note_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title 2"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/note_content_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content 2"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>

        <!-- Note item 3 -->
        <FrameLayout
            android:id="@+id/note_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/note_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title 3"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/note_content_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content 3"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/widget_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated: --:--"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Refresh"
            android:tint="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
